    fichier = fopen(strcat(nom_fichier,".txt"), "a") ;

    if (fichier != NULL) {
    printf("Entrer le motif : ") ;
    texte(motif) ;                                          //ici la chaine de la focntion texte() sera le motif
    fprintf(fichier, "\t\tRDV\n\nMotif : %s\n", motif) ;
    fclose(fichier);
    }
}

