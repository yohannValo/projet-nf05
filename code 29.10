int creer_RDV(char nom_fichier[50])                         //la fonction creer rdv prend en parametre une chaine de caractere qui sera
{                                                           //le nom du fichier
    printf("Donner le nom du fichier : ") ;
    texte(nom_fichier) ;                                    //ici la chaine de la focntion texte() sera le nom du fichier

    entrer_motif(nom_fichier) ;
    entrer_date(nom_fichier) ;                              //ici les differntes fonctions prennent en parametre
    entrer_lieu(nom_fichier) ;                              //le nom du fichier demande juste au dessus
    entrer_heure(nom_fichier) ;                             //c'est pour cela que les fonctions entrer motif, date , lieu et heure
                                                            //sont crees avec un chaine de caractere en parametre
    return 0 ;                                              //ATTENTION ces variables sont locales, meme si elles portent le meme nom
}                                                           //les variables nom_fichier d'une fonction a l'autre peuvent etre diffentes

int modif_RDV()
