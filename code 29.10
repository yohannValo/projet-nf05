void viderbuffer()
{
    int c = 0 ;
    while (c != '\n' && c != EOF) {
            c = getchar() ; }
}

void texte(char chaine[50])                             //creation de la fonction de demande de texte
{                                                       //elle prend en parametre une chaine de caractere qui sera remplacee
    char *positionEntree = NULL ;                       //par exemple par la date ou l'heure ou un nom de rdv
    if (fgets(chaine, 50, stdin) != NULL)
    {
        positionEntree = strchr(chaine, '\n') ;

        if (positionEntree != NULL)
        {
            *positionEntree = '\0' ;
        }
        else {
            viderbuffer() ;
        }
    }
    else
    {
       viderbuffer() ;
    }
}

void consulter_Agenda()
{
    FILE* fichier = NULL ;
    char nom_fichier[50] ;
    printf("Quel fichier voulez-vous consulter ? : ") ;
    texte(nom_fichier) ;                                      //ici la chaine de la focntion texte() sera le nom du fichier
    fichier = fopen(strcat(nom_fichier,".txt"), "r") ;        //fonction strcat() qui combine la chaine du nom du fichier avce la chaine ".txt"
    char rdv[100] = "" ;

    if (fichier != NULL)

    {
        while ( fgets(rdv, 100, fichier) != NULL ) {
            printf("%s", rdv) ;
        }
        fclose(fichier) ;
    }
    else
    {
        printf("Impossible d'ouvrir le fichier demandé\n");
    }
}

void entrer_motif(char nom_fichier[50])
{
    FILE* fichier = NULL ;
